<!--        app:layout_constraintTop_toBottomOf="@+id/savedList" />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saved_account_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/addNewAccountInfo"
        app:layout_constraintTop_toBottomOf="@id/savedList"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addNewAccountInfo"
        style="@style/PrimaryActiveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="@string/tambah_penerima_baru"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>