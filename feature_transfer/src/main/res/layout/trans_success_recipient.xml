<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/recipient_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle_for_transfer_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_recipient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textSize="16sp"
        style="@style/RegulerText"
        android:textColor="@color/black"
        android:text="@string/dummy_recipient_name"
        app:layout_constraintTop_toTopOf="@id/recipient_logo"
        app:layout_constraintStart_toEndOf="@id/recipient_logo"/>

    <TextView
        android:id="@+id/tv_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_bank_name"
        android:textSize="12sp"
        style="@style/RegulerText"
        android:textColor="@color/grey"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_recipient_name"
        app:layout_constraintStart_toEndOf="@id/recipient_logo"
        app:layout_constraintEnd_toStartOf="@id/tv_acc_num"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <TextView
        android:id="@+id/tv_acc_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_acc_num"
        android:textSize="12sp"
        style="@style/RegulerText"
        android:textColor="@color/grey"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/tv_recipient_name"
        app:layout_constraintStart_toEndOf="@id/tv_bank"
        />

</androidx.constraintlayout.widget.ConstraintLayout>