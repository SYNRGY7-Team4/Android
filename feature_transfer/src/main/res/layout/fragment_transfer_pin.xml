<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    tools:context=".ui.TransferPinFragment">

    <TextView
        android:id="@+id/tv_pin_conf_title"
        style="@style/BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="@string/masukkan_pin"
        android:contentDescription="@string/masukkan_pin"
        android:textAlignment="center"
        android:textColor="@color/primary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pin_conf_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gunakan_pin_lumi"
        android:contentDescription="@string/gunakan_pin_lumi"
        style="@style/RegulerText"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_pin_conf_title"
        app:layout_constraintStart_toStartOf="@id/tv_pin_conf_title"
        app:layout_constraintEnd_toEndOf="@id/tv_pin_conf_title"/>

    <include
        android:id="@+id/pin_input"
        layout="@layout/pin_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_pin_conf_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        android:id="@+id/pin_number"
        layout="@layout/pin_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toBottomOf="@+id/pin_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>