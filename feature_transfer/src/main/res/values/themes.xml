<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.BankingApps" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!--        Color Primary-->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_darkBlue</item>
        <item name="colorOnPrimary">@color/primary_lightBlue</item>

        <!--        its Color Secondary-->

        <item name="colorSecondary">@color/secondary_red</item>
        <item name="colorSecondaryVariant">@color/secondary_green</item>
        <item name="colorOnSecondary">@color/secondary_yellow</item>
      <item name="fontFamily">@font/calibri</item>

    </style>


    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_blue</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_blue</item>
    </style>



    <style name="MyButton" parent="Widget.Material3.Button">

        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PrimaryActiveButton" parent="MyButton">

        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="PrimaryActiveButtonDark" parent="MyButton">

        <item name="backgroundTint">@color/primary_darkBlue</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="PrimaryInactiveButton" parent="MyButton">

        <item name="backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="SecondaryActiveButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_with_border</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="SecondaryActiveButtonDark" parent="MyButton">
        <item name="backgroundTint">@color/primary_darkBlue</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="SecondaryInactiveButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_with_border2</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="GradientActiveButton" parent="Widget.AppCompat.Button" >

        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>



    </style>

    <style name="CustomOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">2dp</item> <!-- Adjust stroke width as needed -->
    </style>

    <style name="GradientInactiveButton" parent="Widget.AppCompat.Button">

        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_with_border2</item>
        <item name="android:textColor">@color/grey</item>
    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.BankingApps" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

</resources>