<?xml version="1.0" encoding="utf-8"?><!--<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.internal.BaselineLayout
        android:id="@+id/baseline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/baseline">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_refresh"
            android:layout_width="16dp"
            android:layout_height="22dp"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/ic_refresh" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_judul_transaksi"
                style="@style/RegulerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transfer Berhasil"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_deskripsi_transaksi"
                style="@style/RegulerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="Kamu berhasil melakukan transfer ke BCA dengan nominal sebesar Rp 10.000"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_waktu_transaksi"
                style="@style/RegulerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 Agustus 2024, 12:00:00"
                android:textColor="@color/grey"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>