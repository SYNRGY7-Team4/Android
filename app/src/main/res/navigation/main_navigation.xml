<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.synrgy7team4.bankingapps.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_feature_auth_navigation"
            app:destination="@id/feature_auth_navigation"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_feature_dashboard_navigation"
            app:destination="@id/feature_dashboard_navigation"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/mutasiFragment"
        android:name="com.synrgy7team4.feature_mutasi.ui.mutasiScreen.MutasiFragment"
        android:label="MutasiFragment"
        tools:layout="@layout/fragment_mutasi" />

    <include app:graph="@navigation/feature_auth_navigation" />
    <include app:graph="@navigation/feature_dashboard_navigation" />
    <include app:graph="@navigation/feature_transfer_navigation" />

    <action
        android:id="@+id/auth_to_dashboard_navigation"
        app:destination="@id/feature_dashboard_navigation"
        app:popUpTo="@id/feature_auth_navigation"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/dashboard_to_onboarding_navigation"
        app:destination="@id/feature_auth_navigation"
        app:popUpTo="@id/feature_dashboard_navigation"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/dashboard_to_mutasi_navigation"
        app:destination="@id/mutasiFragment"/>

    <action
        android:id="@+id/dashboard_to_transfer_navigation"
        app:destination="@id/feature_transfer_navigation"/>

    <action
        android:id="@+id/qris_to_transfer_navigation"
        app:destination="@id/transferInputFragment"/>
</navigation>