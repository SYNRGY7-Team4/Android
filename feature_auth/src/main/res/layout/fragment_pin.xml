<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="70dp"
    tools:context=".presentation.register.PinFragment">

    <TextView
        android:id="@+id/tv_pin_title"
        style="@style/BoldText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="@string/atur_pin"
        android:textAlignment="center"
        android:textColor="@color/primary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/masukkan_6_digit_pin"
        style="@style/RegulerText"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_pin_title"
        app:layout_constraintStart_toStartOf="@id/tv_pin_title"
        app:layout_constraintEnd_toEndOf="@id/tv_pin_title"/>

    <View
        android:id="@+id/tv_pin_input1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="5dp"
       android:background="@drawable/pin_bullet"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toStartOf="@id/tv_pin_input2"
        app:layout_constraintStart_toStartOf="@id/tv_pin"
        app:layout_constraintTop_toBottomOf="@id/tv_pin" />
    <View
        android:id="@+id/tv_pin_input2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/pin_bullet"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toStartOf="@id/tv_pin_input3"
        app:layout_constraintStart_toEndOf="@id/tv_pin_input1"
        app:layout_constraintTop_toBottomOf="@id/tv_pin" />
    <View
        android:id="@+id/tv_pin_input3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/pin_bullet"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toStartOf="@id/tv_pin_input4"
        app:layout_constraintStart_toEndOf="@id/tv_pin_input2"
        app:layout_constraintTop_toBottomOf="@id/tv_pin" />
    <View
        android:id="@+id/tv_pin_input4"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/pin_bullet"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toStartOf="@id/tv_pin_input5"
        app:layout_constraintStart_toEndOf="@id/tv_pin_input3"
        app:layout_constraintTop_toBottomOf="@id/tv_pin" />
    <View
        android:id="@+id/tv_pin_input5"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/pin_bullet"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toStartOf="@id/tv_pin_input6"
        app:layout_constraintStart_toEndOf="@id/tv_pin_input4"
        app:layout_constraintTop_toBottomOf="@id/tv_pin" />
    <View
        android:id="@+id/tv_pin_input6"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/pin_bullet"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/tv_pin_input5"
        app:layout_constraintEnd_toEndOf="@id/tv_pin"
        app:layout_constraintTop_toBottomOf="@id/tv_pin" />


    <TextView
        android:id="@+id/btn_num_1"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="70dp"
        style="@style/BoldText"
        android:textSize="30sp"
        android:text="@string/_1"
        app:layout_constraintTop_toBottomOf="@id/tv_pin_input1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_num_2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />
    <TextView
        android:id="@+id/btn_num_2"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textColor="@color/black"
        style="@style/BoldText"
        android:textSize="30sp"
        android:text="@string/_2"
        app:layout_constraintTop_toBottomOf="@id/tv_pin_input1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/btn_num_1"
        app:layout_constraintEnd_toStartOf="@id/btn_num_3"

        />
    <TextView
        android:id="@+id/btn_num_3"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textColor="@color/black"
        style="@style/BoldText"
        android:textSize="30sp"
        android:text="@string/_3"
        app:layout_constraintTop_toBottomOf="@id/tv_pin_input1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_num_2"/>

    <TextView
        android:id="@+id/btn_num_4"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginVertical="40dp"
        style="@style/BoldText"
        android:textSize="30sp"
        android:text="@string/_4"
        app:layout_constraintTop_toBottomOf="@id/btn_num_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_num_5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />
    <TextView
        android:id="@+id/btn_num_5"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:textAlignment="center"
        android:layout_marginVertical="40dp"
        android:textColor="@color/black"
        style="@style/BoldText"
        android:textSize="30sp"
        android:text="@string/_5"
        app:layout_constraintTop_toBottomOf="@id/btn_num_2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/btn_num_4"
        app:layout_constraintEnd_toStartOf="@id/btn_num_6"

        />
    <TextView
        android:id="@+id/btn_num_6"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:textAlignment="center"
        android:layout_marginVertical="40dp"
        android:textColor="@color/black"
        style="@style/BoldText"
        android:textSize="30sp"
        android:text="@string/_6"
        app:layout_constraintTop_toBottomOf="@id/btn_num_2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_num_5"/>

    <TextView
        android:id="@+id/btn_num_7"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginVertical="40dp"
        style="@style/BoldText"
        android:textSize="30sp"
        android:text="@string/_7"
        app:layout_constraintTop_toBottomOf="@id/btn_num_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_num_8"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />
    <TextView
        android:id="@+id/btn_num_8"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:textAlignment="center"
        android:layout_marginVertical="40dp"
        android:textColor="@color/black"
        style="@style/BoldText"
        android:textSize="30sp"
        android:text="@string/_8"
        app:layout_constraintTop_toBottomOf="@id/btn_num_5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/btn_num_7"
        app:layout_constraintEnd_toStartOf="@id/btn_num_9"

        />
    <TextView
        android:id="@+id/btn_num_9"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:textAlignment="center"
        android:layout_marginVertical="40dp"
        android:textColor="@color/black"
        style="@style/BoldText"
        android:textSize="30sp"
        android:text="@string/_9"
        app:layout_constraintTop_toBottomOf="@id/btn_num_5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_num_8"/>
    <TextView
        android:id="@+id/btn_num_0"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:layout_width="50dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        style="@style/BoldText"
        android:textSize="30sp"
        android:text="@string/_0"
        app:layout_constraintTop_toBottomOf="@id/btn_num_8"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/btn_num_8"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"

        />
    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:src="@drawable/ic_backspace"
        app:layout_constraintTop_toBottomOf="@id/btn_num_9"
        app:layout_constraintEnd_toEndOf="@id/btn_num_9"
        app:layout_constraintStart_toEndOf="@id/btn_num_0"/>




</androidx.constraintlayout.widget.ConstraintLayout>