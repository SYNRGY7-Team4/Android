<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".presentation.register.BiodataFragment">

    <TextView
        android:id="@+id/tvBiodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/biodata"
        android:textColor="@color/primary_blue"
        style="@style/BoldText"
        android:layout_marginTop="110dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
      />

    <TextView
        android:id="@+id/tvNoKtp"
        style="@style/RegulerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Nomor KTP"
        android:textColor="@color/primary_blue"
        app:layout_constraintTop_toBottomOf="@+id/tvBiodata"
        app:layout_constraintBottom_toTopOf="@+id/ktpLayout"
        app:layout_constraintStart_toStartOf="@+id/ktpLayout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ktpLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/grey"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvNoKtp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/edtKtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NIK 16 Digit"
            android:inputType="number"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvName"
        style="@style/RegulerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Nama Lengkap"
        android:textColor="@color/primary_blue"
        app:layout_constraintBottom_toTopOf="@+id/nameLayout"
        app:layout_constraintStart_toStartOf="@+id/ktpLayout"
        app:layout_constraintTop_toBottomOf="@+id/ktpLayout" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/grey"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: Budi Sumanto" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvTanggalLahir"
        style="@style/RegulerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"
        android:textColor="@color/primary_blue"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/ktpLayout"
        app:layout_constraintTop_toBottomOf="@+id/nameLayout" />

    <TextView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calendar_format"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="@color/grey"
        style="@style/RegulerText"
        app:layout_constraintTop_toBottomOf="@id/tvTanggalLahir"
        app:layout_constraintStart_toStartOf="@id/tvTanggalLahir"/>

    <ImageButton
        android:id="@+id/btn_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:src="@drawable/ic_calendar"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/calendar"
        app:layout_constraintTop_toTopOf="@id/calendar"
        app:layout_constraintBottom_toBottomOf="@id/calendar"/>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLanjut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="70dp"
        android:text="Lanjut"
        style="@style/PrimaryActiveButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>